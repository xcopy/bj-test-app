{% extends 'layout.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card my-5">
                <div class="card-header">Sign in</div>
                <div class="card-body">
                    {% if user.primaryKey %}
                        <div class="text-center">You are already signed in, {{ user.username }}.</div>
                    {% else %}
                        <form method="post" class="needs-validation {{ errors|length ? ' was-validated' : ''}}" novalidate>
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    id="username"
                                    name="username"
                                    value="{{ user.username }}"
                                    placeholder="admin"
                                    required
                                />
                                {% if errors|length and errors.username %}
                                    <div class="invalid-feedback">{{ errors.username }}</div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input
                                    type="password"
                                    class="form-control"
                                    id="password"
                                    name="password"
                                    placeholder="123"
                                    required
                                />
                                {% if errors|length and errors.password %}
                                    <div class="invalid-feedback">{{ errors.password }}</div>
                                {% endif %}
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
