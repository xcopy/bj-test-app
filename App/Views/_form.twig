<h3>{{ task.primaryKey ? 'Update task' : 'Add new task' }}</h3>
<hr>
<form method="post" class="needs-validation{{ errors|length ? ' was-validated' : ''}}" novalidate>
    <input type="hidden" name="qs" value="{{ request.server.get('QUERY_STRING') }}">
    <div class="form-group">
        <div class="form-row">
            <div class="col">
                <label for="username">Username</label>
                <input
                    type="text"
                    id="username"
                    name="username"
                    class="form-control"
                    value="{{ task.username }}"
                    placeholder="Username"
                    required
                />
                {% if errors and errors.username %}
                    <div class="invalid-feedback">{{ errors.username }}</div>
                {% endif %}
            </div>
            <div class="col">
                <label for="email">Email</label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    value="{{ task.email }}"
                    placeholder="johndoe@beejee.com"
                    required
                />
                {% if errors and errors.email %}
                    <div class="invalid-feedback">{{ errors.email }}</div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <textarea
            rows="4"
            id="content"
            name="content"
            class="form-control"
            placeholder="Type something here"
            required>{{ task.content }}</textarea>
        {% if errors and errors.content %}
            <div class="invalid-feedback">{{ errors.content }}</div>
        {% endif %}
    </div>
    {% if task.primaryKey %}
        <div class="form-group">
            <div class="form-check">
                <input
                    class="form-check-input"
                    type="checkbox"
                    id="status"
                    name="status"
                    {% if task.status %}checked{% endif %}
                />
                <label class="form-check-label" for="status">Done?</label>
            </div>
        </div>
    {% endif %}
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
